    <ltd.maimeng.core.ui.widget.StatusBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_room_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="意见反馈" />

    <Button
        android:id="@+id/btn_room_settings"
